{
    // cspell: disable
    "terminal.integrated.allowChords": false,
    "vim.foldfix": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.statusBarColorControl": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "git.autofetch": true,
    "editor.cursorBlinking": "smooth",
    "editor.minimap.enabled": false,
    "workbench.tree.indent": 25,
    "workbench.tree.renderIndentGuides": "always",
    "terminal.integrated.copyOnSelection": true,
    "editor.cursorSurroundingLines": 3,
    "editor.fontFamily": "'FiraCode NF', 'Droid Sans Mono', 'Consolas', 'monospace', monospace",
    "editor.fontLigatures": true,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f87",
        "statusBar.noFolderBackground": "#005f87",
        "statusBar.debuggingBackground": "#005f87",
        "statusBar.foreground": "#ffffff",
        "statusBar.debuggingForeground": "#ffffff"
    },
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.stickyScroll.enabled": false,
    "workbench.tree.enableStickyScroll": false,
    "terminal.integrated.stickyScroll.enabled": false,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorWidth": 3,
    "terminal.integrated.enableVisualBell": true,
    "terminal.integrated.scrollback": 2000,
    "terminal.integrated.suggest.enabled": false,
}
